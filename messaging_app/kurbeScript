#!/bin/bash
# kurbeScript - Script to set up a local Kubernetes cluster using Minikube

# Exit if any command fails
set -e

# Step 1: Check if minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "❌ Minikube is not installed. Please install it first."
    echo "👉 Installation guide: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Step 2: Start Minikube
echo "🚀 Starting Minikube..."
minikube start

# Step 3: Verify cluster is running
echo "🔍 Verifying Kubernetes cluster status..."
minikube kubectl -- cluster-info

# Step 4: Retrieve available pods (in all namespaces)
echo "📋 Retrieving pods..."
minikube kubectl -- get pods -A

echo "✅ Kubernetes local cluster is set up and running!"
